<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Fast and Smoke Tests Suite">
    <test name="Critical Tests">
        <groups>
            <run>
                <!-- Включаем несколько групп -->
                <include name="fast"/>
                <include name="smoke"/>
                <!-- Исключаем медленные тесты -->
                <exclude name="slow"/>
            </run>
        </groups>
        <packages>
            <!-- Запускаем для всех классов в пакете -->
            <package name="com.example.*"/>
        </packages>
    </test>
</suite>